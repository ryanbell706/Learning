#Basic Calculator
#Takes two numbers, adds them together, and prints them
def Basic_Calc():
    num1 = float(input("Enter First Number: "))
    num2 = float(input("Enter Second Number: "))
    result = num1 + num2
    print(result)

#Better Calculator
#Adds, subtracts, divides, multiplies

def Better_Calc():
    num1 = float(input("Enter First Number: "))
    op = input("Enter Operator: ")
    num2 = float(input("Enter Second Number: "))
    if op == "+":
        print(num1 + num2)
    elif op == "-":
        print(num1 - num2)
    elif op == "/":
        print(num1 / num2)
    elif op == "*":
        print(num1 * num2)
    else: print("Error, Invalid Operator")

# Use "Better_Calc()" or "Better_Calc()" to run variation of calculator
